<Page
    x:Class="Arendi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arendi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Background image -->
        <Image Source="/Assets/main-background.png" Stretch="Fill" />

        <StackPanel Margin="20,210,20,230">
            <Button x:ConnectionId='1' Style="{StaticResource Custom_Button}" Name="MainPage_SignupButton" Content="Kaydol" BorderThickness="2" BorderBrush="White" VerticalAlignment="Center" Width="400" Margin="5,0,0,0" Height="70"                                     FontFamily="/Fonts/gothic_0.TTF#Century Gothic"/>
            <Button x:ConnectionId='2' Style="{StaticResource Custom_Button}" Name="MainPage_LoginButton" Content="Giriş" BorderThickness="2" BorderBrush="White" VerticalAlignment="Center" Width="400" Margin="5,0,0,0" Height="70"                                    FontFamily="/Fonts/gothic_0.TTF#Century Gothic"/>
        </StackPanel>

    </Grid>
</Page>

