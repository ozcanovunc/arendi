<Page
    x:Class="arendi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:arendi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Image 
            Source="/Assets/main-background.png" 
            Stretch="Fill" />

        <StackPanel Margin="20,140,20,430">
            <Border Margin="5,10,5,10"
                    BorderThickness="0" 
                    BorderBrush="White" 
                    Background="White" 
                    CornerRadius="10"
                    Height="50">
                <TextBox Name="Main_TextBox_LoginMail"
                         PlaceholderText="Email"
                         BorderThickness="0"
        		         Background="White"
        		         BorderBrush="White"
                         VerticalAlignment="Center"
                         Margin="5,10,5,10"/>
            </Border>
        </StackPanel>

        <StackPanel Margin="20,210,20,230">
            <Border Margin="5,10,5,10"
                    BorderThickness="0" 
                    BorderBrush="White" 
                    Background="White" 
                    CornerRadius="10" 
                    Height="50">
                <PasswordBox Name="Main_TextBox_LoginPassword"
                             PlaceholderText="Şifre"
                             BorderThickness="0"
        		             Background="White"
        		             BorderBrush="White"
                             VerticalAlignment="Center"
                             Margin="5,10,5,10"/>
            </Border>
            <Button Style="{StaticResource Custom_Button}"  
            	    Name="Main_Button"
            	    Content="Giriş"
            	    BorderThickness="2"
            	    BorderBrush="White"
            	    VerticalAlignment="Center"
                    Width="400"
            	    Margin="5,0,0,0" 
            	    Height="70"/>
        </StackPanel>

    </Grid>
</Page>

